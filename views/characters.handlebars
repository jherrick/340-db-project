
<h2>Characters</h2>

<table id="table" border="1">
   <thead>
     <th>ID</th>
     <th>First Name</th>
     <th>Last Name</th>
     <th>School</th>
     <th>House</th>
   </thead>
   <tbody>
      {{#each characters}}
        <tr>
          <td>{{characterId}}</td>
          <td>{{fname}}</td>
          <td>{{lname}}</td>
          <td>{{schoolName}}</td>
          <td>{{houseName}}</td>
          <td><a href="/characters/{{characterId}}">Update</a></td>
          <td><button onclick="deleteChar({{characterId}})">Delete</button></td>
        </tr>
      {{/each}}
   </tbody>
</table>

<h1>Add Character</h1>
<div>
  <form id="addchar" action="/characters" method="post">
     <label for="fname">First Name</label>
     <input type="text" id="fname" name="fname" placeholder="Harry">

     <label for="lname">Last Name</label>
     <input type="text" id="lname" name="lname" placeholder="Potter">

     <label for="school">School</label>
     <select name="schoolId">
        {{#each schools}}
         <option value="{{schoolId}}">{{schoolName}}</option>
        {{/each}}
     </select>

     <label for="House">House</label>
     <select name="houseId">
         {{#each houses}}
          <option value="{{houseId}}">{{houseName}}</option>
         {{/each}}
     </select>
     <input type="submit" value="Submit">
  </form>

</div>


<form id='filter_people' action='' method=''>
    <label> Filter by school </label>
    <select id='school_filter' name="school"> 
        {{#each schools}}
          <option value="{{schoolId}}">{{schoolName}}</option>
        {{/each}}
    </select>
    <input type="button" value="Filter" onclick="filterPeopleBySchool()">
</form>

